<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="@string/setPasswordFragmentSetPasswordForApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSetNewPasswordMessage" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvEnterNewPassword"/>
    <TextView
            android:text="@string/setNewPasswordFragmentEnterNewPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEnterNewPassword"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSetNewPasswordMessage"
            app:layout_constraintStart_toStartOf="@+id/editText2"
            app:layout_constraintBottom_toTopOf="@+id/editText2"/>
    <TextView
            android:text="@string/setNewPasswordFragmentEnterNewPasswordAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/editText3"
            app:layout_constraintTop_toBottomOf="@+id/editText2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editText3"
            android:layout_marginTop="11dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView
            android:text="Later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSetPasswordLater" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/editText3"/>
</androidx.constraintlayout.widget.ConstraintLayout>